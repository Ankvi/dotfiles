set $mod Mod4
set $alt Mod1
set $altgr Mod5
set $term alacritty
set $bg $HOME/Pictures/wallpapers/background.png
set $lock i3lock

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym $mod+$alt+m exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar


# Custom keybindings
bindsym $mod+t exec $term
bindsym $mod+space exec --no-startup-id rofi -show combi

# Screenshotting
bindsym $mod+Shift+s exec --no-startup-id QT_QPA_PLATFORM="" flameshot gui

# kill focused window
bindsym $mod+Shift+q kill

# Task switcher
bindsym $alt+Tab exec --no-startup-id rofi-task-switch

# Power menu
bindsym $mod+Escape exec --no-startup-id rofi-power-menu

# Emoji picker
bindsym $mod+period exec --no-startup-id emoji-picker

# Slack/Teams
bindsym $mod+m exec wmctrl -xa slack || slack &
bindsym $mod+n exec wmctrl -xa teams-for-linux || wmctrl -xa crx__cifhbcnohmdccbgoicgdjpfamggdegmo.Microsoft-edge || /opt/appimages/teams-for-linux.AppImage &

# Spotify
bindsym $mod+p exec --no-startup-id $term -e spt

# Browsers
bindsym $mod+d exec wmctrl -xa brave-browser || brave &
bindsym $mod+Ctrl+d exec brave & 
bindsym $mod+c exec wmctrl -xa code || code &
bindsym $mod+Ctrl+c exec code &
bindsym $mod+x exec wmctrl -xa microsoft-edge.Microsoft-edge || microsoft-edge-stable || microsoft-edge &
bindsym $mod+Ctrl+x exec wmctrl -a "Elkjøp - Microsoft Edge" || microsoft-edge-stable || microsoft-edge &
bindsym $mod+Alt+x exec wmctrl -a "Netlight - Microsoft Edge" || microsoft-edge-stable --profile-directory="Profile 1" || microsoft-edge --profile-directory="Profile 1" &


bindsym $mod+$alt+l exec $lock

# Change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# toggle split orientation
bindsym $mod+v split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout splith
bindsym $mod+Shift+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# focus the parent container
bindsym $mod+a focus parent

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
